{
  "manifest_version": 3,
  "name": "Boquilla Extension",
  "version": "1.0",
  "description": "Boquilla authentication extension.",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.mjs"]
    }
  ],
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost/*",
    "https://localhost/*",
    "http://127.0.0.1/*",
    "https://127.0.0.1/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "logo_min.png"
  }
  }
}
